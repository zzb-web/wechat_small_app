/* pages/personalinfo/personalinfo.wxss */
.upload-image{
  width: 100%;
  height:250rpx;
  background-color: #fba5a6;
  display: flex;
  flex-direction : column;
  justify-content: center;
}
.upload-image>image{
  display: inline-block;
  width: 180rpx;
  height: 180rpx;
  border: 1rpx solid red;
  margin: 0 auto;
}
.user-info{
  width: 94%;
  margin-left: 3%;
  border-radius: 20rpx;
  background-color: #fff;
  margin-top: 20rpx;
  padding: 20rpx 0;
}
.user-info-item{
  height: 80rpx;
  width: 90%;
  margin-left: 5%;
  border-bottom: 1rpx solid #777;
  margin-top: 20rpx;
}
.user-info-item>image{
  width: 60rpx;
  height: 60rpx;
  background-color: red;
}
.user-info-item>input{
  width: calc(100% - 120rpx);
  display: inline-block;
  margin-left: 30rpx;
}
.placeholder{
  font-size: 30rpx;
}
.user-know{
  height: 80rpx;
  width: 100%;
  line-height: 80rpx;
  font-size: 26rpx;
  margin-left: 5%;
  margin-top: 20rpx;
}
.user-know checkbox{
  width: 10rpx;
  height: 10rpx;
}
.user-know text:last-child{
  color: #fba5a6;
}
.upload-schoolcard{
  margin-bottom: 50rpx;
  padding: 30rpx 0;
}
.scholcard-title{
  margin-left: 5%;
}
.scholcard-title>image{
  width: 60rpx;
  height: 60rpx;
  float: left;
}
.scholcard-title>text{
   float: left;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  margin-left: 30rpx;
}
.upload-schoolcard-img{
  width: 150rpx;
  height: 150rpx;
  border: 1rpx solid  red;
  margin-top: 100rpx;
  margin-left: 100rpx;
}
.btn{
  height: 100rpx;
  width: 100%;
  background-color: #fba5a6;
  color: #fff;
  text-align: center;
  line-height: 100rpx;
}