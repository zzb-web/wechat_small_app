/* pages/expressdetail/expressdetail.wxss */

.detail-content{
  width: 94%;
  background-color: #fff;
  margin-left: 3%;
  box-shadow: 2rpx 4rpx 5rpx #888888;
  border-radius: 10rpx;
  overflow-x: hidden;
  overflow-y: auto;
}
.title-1{
  height:90rpx;
  width: 100%;
  line-height: 90rpx;
}
.title-2{
  height: 60rpx;
  width: 100%;
  line-height: 60rpx;
}
.title-1,.title-2{
  color: #777;
  padding-left: 40rpx;
  font-size: 26rpx;
}
.status{
  float: right;
  color: #fba5a6;
  margin-right: 80rpx;
}
.money{
  padding-left: 80rpx;
  color: #CC1C1C;
  font-size: 68rpx;
  font-weight: 600;
  letter-spacing: -6rpx;
}
.address{
  color: #000;
  padding-left: 80rpx;
   font-size: 50rpx;
  font-weight: 550;
}
.express-msg-title>text{
  width: 50%;
  display: inline-block;
}
.express-msg{
  padding-left: 40rpx;
  font-weight: 550;
   font-size: 30rpx;
}
.express-msg>text:first-child{
  display: inline-block;
  width: 50%;
  padding-left: 40rpx;
}
.detail-msg{
  padding-left: 80rpx;
   font-weight: 550;
   font-size: 30rpx;
}
.note{
  width: 90% !important;
  padding-left: 40rpx;
  line-height: 40rpx;
  overflow-x: hidden;
  overflow-y: auto;
  font-size: 30rpx;
}
.line-box{
  position: relative;
  top: -30rpx;
}
.line{
  width: 100%;
  height: 2rpx;
  border-bottom: 2rpx dashed #777;
  position: relative;
  top: 80rpx;
}
.circle{
  width: 50rpx;
  height: 50rpx;
  background-color: #E7E9E8;
  border-radius: 50rpx;
  position: absolute;
  top: 60rpx;
}
.c-1{
  left: -25rpx;
}

.c-2{
  right: -25rpx;
}

.tips{
  color: #777;
  font-size: 30rpx;
  width: 100%;
  text-align: center;
  margin-top: 80rpx;
  height: 150rpx;
}
