/* pages/order/order.wxss */
.order-item{
  width: 90%;
  height: 150rpx;
  margin-top: 80rpx;
  margin-left: 5%;
  border-radius: 20rpx;
  background-color: #fba5a6;
  box-shadow: 2rpx 4rpx 5rpx #888888;
  display: flex;
  flex-direction : column;
  justify-content: center;
}
.order-name{
  height: 80rpx;
  margin:  0 auto;
}
.order-name>view{
  float: left;
}
.order-image{
  width: 80rpx;
  height: 80rpx;
  border: 1rpx solid red;
}
.order-word{
  height: 80rpx;
  line-height: 80rpx;
  margin-left: 20rpx;
  font-size: 40rpx;
  font-weight: 600;
}