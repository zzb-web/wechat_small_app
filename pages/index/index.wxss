/* pages/index/index.wxss */
.swiper-content{
  height: 400rpx;
  width: 94%;
  margin-left: 3%;
  border-radius: 10rpx;
}
.swiper-box{
  height: 100%;
  width: 100%;
}
.slide-image{
  width: 100%;
  height: 400rpx;
  border-radius: 10rpx;
}
.grid-box{
  height: 400rpx;
  width: 94%;
  margin-left: 3%;
  margin-top: 20rpx;
  text-align: center;
  display: flex;
  flex-wrap:  wrap;
  justify-content:  space-between;
  align-items: center;
}
.grid {
  width: 48%;
  height: 180rpx;
  border-radius: 28rpx;
  box-shadow: 2rpx 4rpx 2rpx #888888;
}
.grid>image{
  width: 100%;
  height: 100%;
}
.onekey{
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  bottom: 10rpx;
  left: calc(50% - 50rpx);
}
.onekey>image{
  width: 100%;
  height: 100%;
}

  .onekey_content {
    width: 130rpx;
    border-radius: 12rpx;
    position: absolute;
    bottom: 10rpx;
    text-align: center;
  }
  .onekey-box{
    width: 100%;
    display: flex;
    flex-wrap:  wrap;
    justify-content:  space-around;
    align-items: center;
  }
  .onekey-grid{
    width: 100%;
    height: 120rpx;
    border-radius: 10rpx;
    margin-top: 20rpx;
  }
  .onekey-grid>image{
    width: 100%;
    height: 100%;
  }
  .onekey-close{
    width: 100rpx;
    height: 100rpx;
    margin: 0 auto;
    margin-top: 40rpx;
  }
    .onekey-close>image{
      width: 100%;
      height: 100%;
    }
